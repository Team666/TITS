<Window x:Name="window" x:Class="faceTITS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:TITS="clr-namespace:faceTITS"
        Title="MainWindow" Loaded="window_Loaded"
        SizeToContent="WidthAndHeight"
        MinWidth ="{Binding RelativeSource={RelativeSource Self}, Path=InitialMinWidth}"
        MinHeight="{Binding RelativeSource={RelativeSource Self}, Path=InitialMinHeight}" Width="280">

    <Grid>
        <TITS:PlaybackControls Margin="10,10,10,39" />
        <Slider x:Name="SongProgress" Margin="10,0,10,10" Height="24" VerticalAlignment="Bottom"/>
    </Grid>

</Window>
