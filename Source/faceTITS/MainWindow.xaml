<Window x:Name="window" x:Class="faceTITS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Background="{DynamicResource {x:Static SystemColors.InactiveCaptionBrushKey}}" AllowsTransparency="True" WindowStyle="None"
        DataContext="{Binding Mode=OneWay, RelativeSource={RelativeSource Self}}" Loaded="window_Loaded">
    <Grid RenderTransformOrigin="0.5,0.5">
        <Grid Margin="150,159.333,140,170.707" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="NextBtn" Content="Next" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="160,0,0,0" Click="NextBtn_Click"/>
            <Button Content="Play" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="80,0,0,0" Click="Play_Click"/>
            <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75"/>
        </Grid>
        <Slider x:Name="SongProgress" HorizontalAlignment="Left" Margin="150,184,0,0" VerticalAlignment="Top" Width="235" ValueChanged="Slider_ValueChanged"/>
        <Label x:Name="SongName" HorizontalAlignment="Left" Margin="150,128,0,0" VerticalAlignment="Top" Width="235" Content="{Binding Path=SongTitle}" />
    </Grid>
</Window>
